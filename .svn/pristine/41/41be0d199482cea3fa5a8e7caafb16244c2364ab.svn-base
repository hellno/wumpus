package jpp.wumpus;

import java.io.IOException;

import user.Base;
import rose.world.Color;
import rose.control.InputTuple;

public class WumpusDemo extends Base {
	public void run() {
		/*
		 * Substitute the sample code below with your own code.
		 * Be sure to call done() at the end of your own code too.
		 */

		moveForward();
		moveForward();
		rotateLeft();
		for (int i = 0; i < 5; i++) {
			if (getInputTuple().color.equals(Color.WHITE)) {
				markCurrentNode(Color.RED);
			} else if (getInputTuple().color.equals(Color.RED)) {
				markCurrentNode(Color.GREEN);
			} else if (getInputTuple().color.equals(Color.GREEN)) {
				markCurrentNode(Color.BLUE);
			} else if (getInputTuple().color.equals(Color.BLUE)) {
				markCurrentNode(Color.BLACK);
			} else if (getInputTuple().color.equals(Color.BLACK)) {
				markCurrentNode(Color.WHITE);
			}
		}
		rotateLeft();
		moveForward();
		moveForward();
		done();
	}

	public static void main(String[] args) throws IOException {
			WumpusDemo m = new WumpusDemo("localhost", 51160, 50);
			m.run();
	}

	public WumpusDemo(String hostname, int port, int retries) throws IOException {
		super(hostname, port, retries);
	}
}
